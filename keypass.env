# Configuración de KeyPass
# ========================

# Entorno de ejecución
KEYPASS_ENV=development
KEYPASS_DEBUG=true
KEYPASS_LOG_LEVEL=INFO

# Configuración de base de datos
DB_NAME=keypass.db
DB_PATH=db/

# Configuración de seguridad
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=5
SESSION_TTL_DAYS=30

# Configuración de UI
WINDOW_WIDTH=900
WINDOW_HEIGHT=600
WINDOW_TITLE=KeyPass - Gestor de Contraseñas

# Configuración de contraseñas
MIN_PASSWORD_LENGTH=6
MAX_PASSWORD_LENGTH=32
DEFAULT_PASSWORD_LENGTH=14

# Configuración de archivos
ASSETS_PATH=assets/
DOCS_PATH=docs/
